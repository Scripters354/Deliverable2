@model IEnumerable<MalariaBackend.Models.Publication>

@{
    ViewBag.Title = "Index";
}
<head>
    <link href="~/PortView/css/style.css" rel='stylesheet' type='text/css' />

    <link href="//fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700" rel="stylesheet">
</head>

<h2 style="font-size:30px"> Publications </h2>  
<br />


<p>
    @Html.ActionLink(" New Publication", "Create")
</p>
<br />
<table class="table">
    <tr  style="font-size:21px">
        <th>
           Publication Title
        </th>
        <th>
            Link
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Publication_Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publication_Link)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.About_Malaria.Malaria_Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Publication_ID }) |   |
              
                @Html.ActionLink("Delete", "Delete", new { id = item.Publication_ID })
            </td>
        </tr>
    }

</table>
