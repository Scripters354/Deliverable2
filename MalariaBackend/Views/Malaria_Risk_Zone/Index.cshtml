@model IEnumerable<MalariaBackend.Models.Malaria_Risk_Zone>

@{
    ViewBag.Title = "Index";
}
<head>
    <link href="~/PortView/css/style.css" rel='stylesheet' type='text/css' />

    <link href="//fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700" rel="stylesheet">
</head>

<h2 style="font-size:30px"><b>Malaria Risk Zones</b></h2> 
<br />

<p>
    @Html.ActionLink("Add Risk Location", "Create")
</p>
<table class="table">
    <tr style="font-size:21px">
        <th >
           Risk Location
        </th>
        <th>
            Zone
        </th>
        <th>
           Severity
        </th>
        <th>
            Malaria Description
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Risk_Zone_Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Risk_Zone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Severity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.About_Malaria.Malaria_Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Malaria_Risk_Zone_ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Malaria_Risk_Zone_ID })
            </td>
        </tr>
    }

</table>
