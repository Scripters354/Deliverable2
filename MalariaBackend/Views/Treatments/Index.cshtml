@model IEnumerable<MalariaBackend.Models.Treatment>

@{
    ViewBag.Title = "Index";
}
<head>
    <link href="~/PortView/css/style.css" rel='stylesheet' type='text/css' />

    <link href="//fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700" rel="stylesheet">
</head>

<h2 style="font-size:30px">Treatments</h2> 
<br />

<p>
    @Html.ActionLink("Add Treatments", "Create") 
    <br />
</p>
<table class="table">
    <tr style="font-size:21px">
        <th>
            Treatment
        </th>
        <th>
            About Malaria Description
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Treatment_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.About_Malaria.Malaria_Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Treatment_ID }) |
                
                @Html.ActionLink("Delete", "Delete", new { id = item.Treatment_ID })
            </td>
        </tr>
    }

</table>
