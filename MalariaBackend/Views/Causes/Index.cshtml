@model IEnumerable<MalariaBackend.Models.Cause>

@{
    ViewBag.Title = "Index";
}
<head>
    <link href="~/PortView/css/style.css" rel='stylesheet' type='text/css' />

    <link href="//fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700" rel="stylesheet">
</head>



<p>
    @Html.ActionLink("Add Cause", "Create")
</p>
<table class="table">
    <tr style="font-size:20px">
        <th>
            Cause 
        </th>
        <th>
            Cause Description
        </th>
      
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cause_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cause_Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.About_Malaria.Malaria_Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Cause_ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Cause_ID })
            </td>
        </tr>
    }

</table>
