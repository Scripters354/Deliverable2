@model IEnumerable<MalariaBackend.Models.Prevention>

@{
    ViewBag.Title = "Index";
}
<head>
    <link href="~/PortView/css/style.css" rel='stylesheet' type='text/css' />

    <link href="//fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700" rel="stylesheet">
</head>

<h2 style="font-size:30px">Malaria Prevention</h2> 
<br />

<p>
    @Html.ActionLink("New Prevention", "Create")
</p>
<table class="table">
    <tr style="font-size:21px">
        <th>
            About Malaria Description
        </th>
        <th>
            Prevention Method
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.About_Malaria.Malaria_Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Prevention_Method)
    </td>

    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Prevention_ID }) |
      |
        @Html.ActionLink("Delete", "Delete", new { id = item.Prevention_ID })
    </td>
</tr>
    }

</table>
